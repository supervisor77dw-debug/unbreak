# =====================================================
# UNBREAK ONE - Environment Variables Template
# =====================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to Git!
# =====================================================

# =====================================================
# SUPABASE
# =====================================================

# Supabase Project URL (get from Supabase Dashboard → Settings → API)
SUPABASE_URL=https://your-project-id.supabase.co

# Service Role Key (KEEP SECRET! Server-side only)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Public Anon Key (client-safe, used in frontend)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here

# =====================================================
# ADMIN SETUP
# =====================================================

# Email of the first admin user (will be auto-promoted on bootstrap)
SEED_ADMIN_EMAIL=admin@your-domain.com

# Optional: Secret token for /api/admin/bootstrap endpoint
# If not set, SUPABASE_SERVICE_ROLE_KEY is used
BOOTSTRAP_SECRET=your-random-secret-token-here

# =====================================================
# STRIPE (E-Commerce)
# =====================================================

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =====================================================
# APP CONFIGURATION
# =====================================================

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Optional: Analytics, Error Tracking, etc.
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# SENTRY_DSN=https://...
