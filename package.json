{
  "name": "unbreak-one-homepage",
  "version": "1.0.0",
  "description": "UNBREAK ONE - Homepage with 3D Configurator Integration + E-Commerce Backend",
  "scripts": {
    "dev": "next dev",
    "dev:clean": "npm run clean:next && next dev",
    "dev:validate": "node scripts/validate-env.js && next dev",
    "validate-env": "node scripts/validate-env.js",
    "images:optimize": "node tools/optimize-images.js",
    "prebuild": "npm run images:optimize && node scripts/generate-build-info.js",
    "build": "next build",
    "start": "next start",
    "clean:next": "rimraf .next",
    "clean:all": "rimraf .next node_modules package-lock.json",
    "reinstall": "npm run clean:all && npm install",
    "healthcheck": "node scripts/healthcheck.mjs",
    "seed": "node scripts/seed-products.js",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "serve": "python -m http.server 8000",
    "inject-env": "node scripts/inject-env.js",
    "db:setup": "echo 'Run database/auth-setup.sql in Supabase Dashboard SQL Editor'",
    "db:catalog": "echo 'Run database/catalog-setup.sql in Supabase Dashboard SQL Editor'",
    "test:auth": "node test-auth-setup.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:seed": "node prisma/seed.js",
    "prisma:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@supabase/supabase-js": "^2.39.0",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.3",
    "formidable": "^3.5.4",
    "micro": "^10.0.1",
    "next": "^14.0.4",
    "next-auth": "^4.24.13",
    "pg": "^8.16.3",
    "prisma": "^7.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "resend": "^6.6.0",
    "sharp": "^0.34.5",
    "stripe": "^14.25.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "rimraf": "^5.0.10",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": "20.x",
    "npm": ">=9.0.0"
  }
}
